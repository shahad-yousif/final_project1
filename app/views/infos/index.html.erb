<p id="notice"><%= notice %></p>
<h1>Listing Infos</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr class="info">
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @infos.each do |info| %>
      <tr>
        <td><%= info.first_name %></td>
        <td><%= info.last_name %></td>
        <td><%= info.gender %></td>
        <td><%= info.age %></td>
        <td><%= info.email %></td>
        <td><%= info.phone_number %></td>
        <td><%= info.country %></td>
        <td><%= link_to 'Show', info,class:"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_info_path(info),class:"btn btn-default" %></td>
        <td><%= link_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Info', new_info_path,class:"btn btn-default" %>

